                        <form method="post">

                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        @*Họ*@
                                        <div class="form-floating">
                                            <input asp-for="Input.HoNguoiDung" class="form-control" aria-required="true" />
                                            <label asp-for="Input.HoNguoiDung">Họ lót <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.HoNguoiDung" class="text-danger p-2"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        @*Tên*@
                                        <div class="form-floating">
                                            <input asp-for="Input.TenNguoiDung" class="form-control" aria-required="true" />
                                            <label asp-for="Input.TenNguoiDung">Tên <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.TenNguoiDung" class="text-danger p-2"></span>
                                        </div>

                                    </div>

                                    <div class="col-sm-6">
                                        @*Username*@
                                        <div class="form-floating">
                                            <input asp-for="Input.Username" class="form-control" aria-required="true" />
                                            <label asp-for="Input.Username">Username <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.Username" class="text-danger p-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        @*Ngày sinh*@
                                        <div class="form-floating">
                                            <input asp-for="Input.NgaySinh" class="form-control" type="date" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                            <label asp-for="Input.NgaySinh">Ngày sinh <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.NgaySinh" class="text-danger p-2"></span>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        @*Giới tính*@
                                        <div class="form-floating">

                                            <select id="GioiTinh" asp-for="Input.GioiTinh" class="form-control">
                                                <option value="Nam" selected>Nam</option>
                                                <option value="Nữ">Nữ</option>
                                            </select>
                                            <label asp-for="Input.GioiTinh">Giới tính <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.GioiTinh" class="text-danger p-2"></span>

                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        @*Số điện thoại*@
                                        <div class="form-floating">
                                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                                            <label asp-for="Input.PhoneNumber">Số điện thoại <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger p-2"></span>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        @*Email*@
                                        <div class="form-floating">
                                            <input asp-for="Input.Email" class="form-control" aria-required="true" />
                                            <label asp-for="Input.Email">Email <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.Email" class="text-danger p-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        @*Địa chỉ*@
                                        <div class="form-floating">
                                            <input asp-for="Input.DiaChi" class="form-control" aria-required="true" />
                                            <label asp-for="Input.DiaChi">Địa chỉ <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.DiaChi" class="text-danger p-2"></span>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        @*Mật khẩu*@
                                        <div class="form-floating">
                                            <input asp-for="Input.Password" type="password" class="form-control" aria-required="true" />
                                            <label asp-for="Input.Password">Mật khẩu <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.Password" class="text-danger p-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        @*Mật khẩu*@
                                        <div class="form-floating">
                                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" aria-required="true" />
                                            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu <span class="text-danger">*</span></label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger p-2"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-12">
                                        @*Token ReCaptcha*@
                                        <div class="form-floating">
                                            <input asp-for="Input.Token" class="form-control" hidden />

                                        </div>
                                    </div>

                                    <div class="button">
                                        <button class="btn" type="submit">Đăng ký</button>
                                    </div>
                                    <p class="outer-link">
                                        Đã có tài khoản <a href="/Identity/Account/Login">Đăng nhập ngay</a>
                                    </p>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




