@page
@model CreateModel
@{
    ViewData["Title"] = "List Tasks";
}


<!-- ========== section start ========== -->
<section class="section">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    @*Start*@
                    <form class="card login-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="card-body">
                            <div class="title">
                                <h3>Thêm dự án</h3>
                                <p>
                                    Thêm dự án mới
                                </p>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.TenDuAn" class="form-control" aria-required="true" placeholder="Nhập tên công việc để tìm kiếm" />
                                <label asp-for="Input.TenDuAn">Tên dự án <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.TenDuAn" class="text-danger p-2"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="Input.MoTaDuAn" class="form-control" aria-required="true" placeholder="Nhập tên công việc để tìm kiếm" />
                                <label asp-for="Input.MoTaDuAn">Mô tả dự án <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.MoTaDuAn" class="text-danger p-2"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="Input.NgayBatDau" type="date" class="form-control" aria-required="true" />
                                <label asp-for="Input.NgayBatDau">Ngày bắt đầu <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.NgayBatDau" class="text-danger p-2"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="Input.NgayKetThuc" type="date" class="form-control" aria-required="true" />
                                <label asp-for="Input.NgayKetThuc">Ngày kết thúc <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.NgayKetThuc" class="text-danger p-2"></span>
                            </div>

                            <div class="form-floating">
                                <select asp-for="Input.TrangThai" class="form-control">
                                    <option>- Chọn trạng thái -</option>
                                    <option value="-1">Quá hạn</option>
                                    <option value="0">Chưa bắt đầu</option>
                                    <option value="1">Đang thực hiện</option>
                                    <option value="2">Đã kết thúc</option>
                                </select>
                                <label asp-for="Input.TrangThai">Trạng thái <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.TrangThai" class="text-danger p-2"></span>
                            </div>

                            <div class="button">
                                <button class="btn btn-primary" type="submit">Thêm mới</button>
                                <hr />
                                <a class="btn btn-primary" asp-page="./Index"><i class="lni lni-chevron-left me-2"></i> Trở lại</a>
                            </div>

                        </div>
                    </form>

                    @*End*@
                    <!-- End Chart -->
                </div>
            </div>
            <!-- End Col -->
        </div>
        <!-- End Row -->
    </div>
    <!-- end container -->
</section>
<!-- ========== section end ========== -->